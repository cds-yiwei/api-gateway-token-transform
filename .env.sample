# Sample .env for api-gateway-token-transform
# Copy this file to the project root as `.env` or to `conf/.env` and edit values as needed.

# Gateway
GATEWAY_BASE_URL=https://gateway.address/oauth2

# Upstream OIDC provider
UPSTREAM_BASE_URL=https://tenant.verify.ibm.com/oauth2
# Set to true to skip TLS verification (useful for local dev with self-signed certs)
UPSTREAM_SKIP_SSL_VERIFY=true

# Salts
# CLIENT_SALTS format: client_id:salt,client_id2:salt2
DEFAULT_SALT=demo_default_salt
CLIENT_SALTS=default_client:demo_default_salt,client_abc:demo_salt_abc

# Sector identifiers
# CLIENT_SECTORS format: client_id:sector,client_id2:sector2
DEFAULT_SECTOR=example.com
CLIENT_SECTORS=default_client:example.com,client_abc:client-abc.example.org

# Backchannel logout URIs
# CLIENT_BACKCHANNEL_LOGOUT_URIS format: client_id:url,client2:url2
DEFAULT_BACKCHANNEL_LOGOUT_URI=http://localhost:8080/logout
CLIENT_BACKCHANNEL_LOGOUT_URIS=default_client:http://localhost:8080/logout,some_client_id:http://172.17.0.1:3000/backchannel_logout

# Trim lists (comma-separated)
CLAIMS_TRIMLIST=uniqueSecurityName,uid
USERINFO_TRIMLIST=uniqueSecurityName,uid

# Signing
SIGNING_ALG=RS256
# Path relative to OpenResty conf dir (e.g., conf/keys/private.pem)
SIGNING_KEY_PATH=keys/private.pem
RE_SIGN_KEY=demo_re_signing_key
